generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  image     String?
  role      Role     @default(CLIENT)
   resetToken       String?
  resetTokenExpiry DateTime?
  createdAt DateTime @default(now())
}

enum Role {
  CLIENT
  ARTIST
  ADMIN
}
